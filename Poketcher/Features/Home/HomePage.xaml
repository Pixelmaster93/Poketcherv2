<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poketcher.Features.Home.HomePage"
             xmlns:views="clr-namespace:Poketcher.Features.Base"
             xmlns:viewmodel="clr-namespace:Poketcher.Features.Home"
             x:DataType="viewmodel:HomeViewModel"
             Title="HomePage">
    <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*" RowSpacing="15" ColumnSpacing="15" Padding="15">
        <Border>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToPokemonHomeCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="pokedex.svg"/>
                <Label Text="PokÃ¨dex" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Column="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="object.svg"/>
                <Label Text="Objects" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="move.svg"/>
                <Label Text="Moves" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="1" Grid.Column="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="berry.svg"/>
                <Label Text="Berryes" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="games.svg"/>
                <Label Text="Games" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="2" Grid.Column="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding GoToSettingsCommand}"/>
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Image Source="settings.svg"/>
                <Label Text="Settings" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</views:BasePage>
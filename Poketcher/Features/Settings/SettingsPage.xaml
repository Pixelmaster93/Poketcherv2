<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poketcher.Features.Settings.SettingsPage"
             xmlns:views="clr-namespace:Poketcher.Features.Base"
             xmlns:viewmodel ="clr-namespace:Poketcher.Features.Settings"
             x:DataType="viewmodel:SettingsViewModel"
             Title="SettingsPage">
    <Grid RowDefinitions="50,50,50,50,*" RowSpacing="15">
        <Border>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ExportDatabaseCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Export Pokèmon" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImportDatabaseCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Import Pokèmon" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="2">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding PopulateTestDataCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Import Pokèmon" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="3">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding LoadDatabaseDataCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Load Pokémon Data" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>

        <!-- Owned Pokémons -->
        <VerticalStackLayout Grid.Row="4" Padding="10">
            <Label Text="Owned Pokémon" FontSize="20" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding OwnedPokemons}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding Number}" FontAttributes="Bold" />
                            <Label Text="{Binding Generation}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Wanted Pokémons -->
            <Label Text="Wanted Pokémon" FontSize="20" FontAttributes="Bold" Margin="0,20,0,0" />
            <CollectionView ItemsSource="{Binding WantedPokemons}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding Number}" FontAttributes="Bold" />
                            <Label Text="{Binding Generation}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Grid>
</views:BasePage>
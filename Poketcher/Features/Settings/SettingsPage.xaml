<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Poketcher.Features.Settings.SettingsPage"
             xmlns:views="clr-namespace:Poketcher.Features.Base"
             xmlns:viewmodel ="clr-namespace:Poketcher.Features.Settings"
             x:DataType="viewmodel:SettingsViewModel"
             Title="SettingsPage">
    <Grid RowDefinitions="*,*" RowSpacing="15">
        <Border>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ExportDatabaseCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Export Pokèmon" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
        <Border Grid.Row="1">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImportDatabaseCommand}" />
            </Border.GestureRecognizers>
            <VerticalStackLayout>
                <Label Text="Import Pokèmon" HorizontalOptions="Center" VerticalOptions="End"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</views:BasePage>